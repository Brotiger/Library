<%- include("layouts/head") %>
<h1 class="text-center mt-4 mt-sm-5 h2">Library page</h1>
<% if(books.length){ %>
    <div class="mt-4">
        <table class="table mx-auto table-striped mb-0">
            <thead class="container">
                <tr class="row thead-dark">
                    <th class="col-2 col-sm-1">#</th>
                    <th class="col-6 col-sm-8">Book name</th>
                    <th class="col-4 col-sm-3">Authors</th>
                </tr>
            </thead>
            <tbody class="container overflow-auto border-bottom">
                <% books.forEach(function(element, index, array){ %>
                <tr class="row">
                    <td class="col-2 col-sm-1"><%= index + 1 %></td>
                    <td class="col-6 col-sm-8">
                        <%= element.name %>
                    </td>
                    <td class="col-4 col-sm-3">
                        <%= element.authors.length %>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
<% } else { %>
    <p class="text-center">No books in library</p>
<% } %>
</body>
